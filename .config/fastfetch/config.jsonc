{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "padding": {
      "top": 1,
      "right": 4,
      "left": 1,
    },
  },
  "display": {
    "separator": "  ",
    "constants": ["──────────────────────────────"],
    // "constants": ["───────────────────────────"],
  },
  "modules": [
    // {
    //     "type": "custom",
    //     "format": "┌{$1}{$1}┐",
    //     "outputColor": "90"
    // },
    // {
