    // },
    "break",
    {
      "type": "custom",
      "format": "┌{$1}{$1}┐",
      "outputColor": "90",
      // "outputColor": "39",
    },
    "break",
    {
      "type": "os",
      "key": "{icon} OS",
      "keyColor": "yellow",
    },
    {
      "type": "kernel",
      "key": "│ ├{icon}",
      "keyColor": "yellow",
    },
    {
      "type": "terminal",
      "key": "│ ├{icon}",
      "keyColor": "yellow",
    },
    {
      "type": "packages",
      "key": "└ └{icon}",
      "keyColor": "yellow",
    },
    "break",
    {
      "type": "host",
      "key": "󰌢 PC",
      "format": "{family} ({vendor})",
      "keyColor": "green",
    },
    {
      "type": "cpu",
      "key": "│ ├{icon}",
      "keyColor": "green",
      "showPeCoreCount": true,
    },
    // {
    //   "long": "cpu-temp",
    //   "desc": "Detect and display CPU temperature if supported",
    //   "arg": {
    //     "type": "bool",
    //     "optional": true,
    //     "default": false,
    //   },
    // },
    //   "type": "cpu-usage",
    //   "key": "│ ├{icon}",
    //   "keyColor": "green",
    // },
    // {
    //   "type": "gpu",
    //   "key": "│ ├󰍛",
    //   "keyColor": "green",
    // },
    {
      "type": "memory",
      "key": "│ ├{icon}",
      "keyColor": "green",
      "percent": {
        "type": 3, // show number + bar
        "green": 30,
        "yellow": 70,
      },
      "format": "{percentage-bar} [{used} / {total}]",
    },
    {
      "type": "battery",
      "key": "└ └{icon}",
      "keyColor": "green",
      "percent": {
        "type": 3,
        "green": 50,
        "yellow": 20,
      },
      "outputColor": {
        "Charging": "blue",
        "default": "white",
      },
      "format": "{capacity-bar} [{time-hours} h, {time-minutes} min] [{status}]",
    },
    "break",
    {
      "type": "uptime",
      "key": "{icon} HW",
      "keyColor": "blue",
      "format": "Uptime [{1} days, {2} hours, {3} minutes]",
    },
    {
      "type": "sound",
      "key": "│ ├{icon}",
      "percent": {
        "type": 3, // 3 means show both percentage number and bar
        "green": 30, // values below 30% are green
        "yellow": 70, // 30-70% yellow, above 70% red
      },
      // "format": "{name} ({volume-percentage})",
      "format": "{volume-percentage-bar} {name}",
      "keyColor": "blue",
    },
    // "format": "{volume-percentage-bar} {name}",
    {
      "type": "brightness",
      "key": "└ └󰃠", // pick any icon you like
      "percent": {
        "type": 3, // 3 = number + bar
        "green": 40, // below 40% = green
        "yellow": 75, // 40–75% = yellow, above 75% = red
      },
      "format": "{percentage-bar} Brightness level {percentage}", // add {name} if you want the display name
      "keyColor": "blue",
    },
    // "break",
    // {
