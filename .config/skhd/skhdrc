# open iTerm
cmd + shift - return : open -a kitty

# focus window
cmd - h : yabai -m window --focus north
cmd - j : yabai -m window --focus west
cmd - k : yabai -m window --focus east
cmd - l : yabai -m window --focus south

# swap managed window
cmd + shift - h : yabai -m window --swap north
cmd + shift - j : yabai -m window --swap west
cmd + shift - k : yabai -m window --swap east
cmd + shift - l : yabai -m window --swap south

# move managed window
# cmd - h : yabai -m window --warp north
# cmd - j: yabai -m window --warp west
# cmd - k : yabai -m window --warp south
# cmd - l : yabai -m window --warp east
#
# fast focus desktop move FaceTime to do only if it is active
# cmd - 1 : yabai -m space --focus 1; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 1
# cmd - 2 : yabai -m space --focus 2; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 2
# cmd - 3 : yabai -m space --focus 3; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 3
# cmd - 4 : yabai -m space --focus 4; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 4
# cmd - 5 : yabai -m space --focus 5; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 5
# cmd - 6 : yabai -m space --focus 6; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 6
# cmd - 7 : yabai -m space --focus 7; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 7
# cmd - 8 : yabai -m space --focus 8; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 8
# cmd - 9 : yabai -m space --focus 9; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 9
# cmd - 0 : yabai -m space --focus 10; yabai -m window $(yabai -m query --windows | jq '.[] | select( .app == "FaceTime" )'.id) --space 10
#
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9
cmd - 0 : yabai -m space --focus 10

# send window to desktop and follow focus
cmd + shift - 1 : yabai -m window --space  1
cmd + shift - 2 : yabai -m window --space  2
cmd + shift - 3 : yabai -m window --space  3
cmd + shift - 4 : yabai -m window --space  4
cmd + shift - 5 : yabai -m window --space  5
cmd + shift - 6 : yabai -m window --space  6
cmd + shift - 7 : yabai -m window --space  7
cmd + shift - 8 : yabai -m window --space  8
cmd + shift - 9 : yabai -m window --space  9
cmd + shift - 0 : yabai -m window --space  10

# float mode yabai
cmd + shift - space : yabai -m config layout float
# Bsp mode yabai
cmd - space : yabai -m config layout bsp

# float / unfloat window and center on screen
cmd + shift - t : yabai -m window --toggle float;\
           yabai -m window --grid 4:4:1:1:2:2

# Restart Yabai
lctrl + alt + cmd - q : yabai --restart-service
lctrl + alt + cmd + shift - q : osascript -e 'tell app "System Events" to log out'
